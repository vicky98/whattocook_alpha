<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.tp.whattocook.RecipeOfTheDay"
    tools:showIn="@layout/activity_recipe_of_the_day">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/fruitsalad"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="НЕКА Я ВИДЯ"
        android:id="@+id/rotd_recipe_button"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/rotd_askroi_button"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="НЕ СЕГА"
        android:id="@+id/rotd_askroi_button"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:layout_marginBottom="56dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Плодова салата"
        android:textSize="25sp"
        android:id="@+id/rotd_recipe_title"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

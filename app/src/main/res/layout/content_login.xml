<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.tp.whattocook.Login"
    tools:showIn="@layout/activity_login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВХОД"
        android:id="@+id/login_login_button"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:layout_marginTop="143dp"
        android:layout_below="@+id/password_login"
        android:layout_alignEnd="@+id/imageView3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="НЕ ПОМНЯ ПАРОЛАТА СИ"
        android:id="@+id/login_forgotten_password"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:layout_alignTop="@+id/login_login_button"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_login"
        android:layout_below="@+id/text_username_login"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_login"
        android:layout_below="@+id/text_password_login"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ПОТРЕБИТЕЛСКО ИМЕ"
        android:textSize="20sp"
        android:id="@+id/text_username_login"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ПАРОЛА"
        android:textSize="20sp"
        android:id="@+id/text_password_login"
        android:layout_below="@+id/username_login"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="30dp"
        android:layout_height="20px"
        android:layout_alignTop="@+id/login_login_button"
        android:layout_toStartOf="@+id/login_login_button"
        android:layout_above="@+id/login_forgotten_password" />

</RelativeLayout>
